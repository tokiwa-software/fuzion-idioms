ex360 is
  aa := ["A", "B", "C", "D", "E"]

  f(b Sequence T) String =>
    len := b.count
    if len = 0 then ""
    else if len = 1 then $b.first
    else
      b1 := b.slice 0 (len - 1)
      b1.as_string ", " + " and " + b.last.as_string

  for i in 1..(aa.count) do
    a := aa.slice 0 i
    s := f a
    say s
